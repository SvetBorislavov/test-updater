{
  "name": "electron-vue-template",
  "version": "1.0.0",
  "description": "A minimal Electron + Vue application",
  "main": "build/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build.js && electron-builder",
    "build:win": "node scripts/build.js && electron-builder --win",
    "build:mac": "node scripts/build.js && electron-builder --mac",
    "build:linux": "node scripts/build.js && electron-builder --linux",
    "release": "electron-builder -m -p 'onTagOrDraft'"
  },
  "repository": "https://github.com/SvetBorislavov/test-updater",
  "author": {
    "name": "SvetBorislavov",
    "url": "https://github.com/SvetBorislavov"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.1",
    "@vue/devtools": "^6.5.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.2.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.4",
    "vue": "^3.3.8"
  }
}
